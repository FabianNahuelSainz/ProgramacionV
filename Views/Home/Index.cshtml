@{
    ViewData["Title"] = "Movie App";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Vinculando Bootstrap para el diseño -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Personalización adicional */
        body {
            background-color: #f4f7fa;
            font-family: 'Arial', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        h1 {
            color: #333;
            font-weight: bold;
            margin-bottom: 20px;
        }

        p {
            font-size: 1.2em;
            color: #555;
        }

        .btn-custom {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
        }

            .btn-custom:hover {
                background-color: #0056b3;
            }

        .image-container {
            margin-top: 10px;
            text-align: center;
        }

            .image-container img {
                height: auto; 
                width: auto; 
            }
    </style>
</head>
<body>

    <div class="container text-center">
        <h1 class="display-4">PROGRAMACIÓN V</h1>
        <h1 class="display-4">ACTIVIDAD SEMANA 1</h1>
        <p class="lead">Learn about <a href="https://learn.microsoft.com/aspnet/core" class="btn-custom">building Web apps with ASP.NET Core</a></p>
    </div>

    <!-- Imagen relacionada con sistemas -->
    <div class="image-container">
        <img src="~/imagenes/programando.jpg" alt="Programando">
    </div>

    <!-- Vinculando el script de Bootstrap (opcional para funciones interactivas) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>