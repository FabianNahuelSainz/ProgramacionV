@model MvcMovie.Models.Usuario
 <h2>Editar usuario</h2>

<style>
    .top-left-button
    {
        position: absolute;
        top: 60px;
        left: 10px;
        z-index: 1000;
    }

    .btn-link
    {
        padding: 10px 16px;
        background-color: #336699;
        color: white;
        border: none;
        border-radius: 4px;
        font-weight: bold;
        font-size: 14px;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
        display: inline-block;
    }

    .btn-link:hover
    {
        background-color: #2a557a;
    }
</style>


<div class="top-left-button">
    <a asp-controller="Usuario" asp-action="Listado" class="btn-link">Atrás</a>
</div>

 <form asp-action="Editar" method="post">

     <input type="hidden" asp-for="Id" />
    

    <div class="mb-3">
        <label> Nombre:
        </label>
        <input  asp-for="Nombre" class="form-control" />
    </div>

    <div class="mb-3">
        <label>
            Apellido:
        </label>
        <input asp-for="Apellido" class="form-control" />
    </div>

    <div class="mb-3">
        <label>
            Email:
        </label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="mb-3">
        <label>
            Username:
        </label>
        <input asp-for="Username" class="form-control" />
    </div>

    <div class="mb-3">
        <label>
            Contraseña:
        </label>
        <input asp-for="Password" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success" > Guardar cambios </button>

 </form>
